<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spendingGraphLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".ui.SpendingGraphActivity">

    <TextView
        android:id="@+id/spendingGraphTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spending vs Budget Graph"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <vcmsa.projects.sindiswasinazo.ui.views.CustomGraphView
        android:id="@+id/graphView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEEEEE"
        android:padding="12dp" />

    <TextView
        android:id="@+id/chartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“Š Monthly Spending Overview"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/chartSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total spent this month:"
        android:textSize="16sp"
        android:textColor="#555555"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <Button
        android:id="@+id/viewDetailsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Detailed Report"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

</LinearLayout>
